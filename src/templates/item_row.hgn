<tr>
  <td class="item-number">
    {{item.item_number}}
  </td>

  {{#hasValue}}
  <td class="value">
    <i class="fa fa-money"/> {{item.value}}
  </td>
  {{/hasValue}}

  <td class="main">
    {{item.description}}

    {{#item.has_tags}}
      <br /><span class="tags">Tags:
        {{#item.tags}}
          <a href="#" class="taglink" special="abc">{{.}}</a>,
        {{/item.tags}}
      </span>
    {{/item.has_tags}}
  </td>
</tr>